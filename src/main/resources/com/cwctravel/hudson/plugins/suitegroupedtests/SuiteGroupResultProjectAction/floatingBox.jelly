<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form" xmlns:i="jelly:fmt" xmlns:local="local">
  <j:set var="tr" value="${action.lastTestResultAction}" />
  <j:if test="${tr.previousResult!=null}">
    <!-- at least two data points are required for a trend report -->
    <div align="right">
      <j:set var="mode" value="${h.getCookie(request,'TestResultAction_failureOnly').value}" />

            <j:forEach var="suiteName" items="${action.suiteNames}">
                <div>
                    <div class="test-trend-caption">
                      ${%Test Result Trend} for "${suiteName}"
                    </div>
                    <j:if test="${mode!=null}">
                      <j:set var="trendQueryString1" value="?failureOnly=${mode}" />
                      <j:set var="trendQueryString2" value="&amp;failureOnly=${mode}" />
                    </j:if>
                     <!-- TODO: deal with flipping  -->
                    <img src="groupedTests/trendGraph/${suiteName}/png${trendQueryString1}" lazymap="groupedTests/trendGraph/${suiteName}/map${trendQueryString1}" alt="[Test result trend chart for group '${suiteName}']"/>
                    <a href="groupedTests/trendGraph/${suiteName}/png?width=800&amp;height=600${trendQueryString2}">${%enlarge}</a>
                </div>
           </j:forEach>

      <div>

      </div>
      <div style="text-align:right">
        <a id="change-mode-link" name="change-mode-link" href="groupedTests/flipTrend">
          <j:choose>
            <j:when test="${mode}">
              (${%show pass count and failure count})
            </j:when>
            <j:otherwise>
              (${%just show failures})
            </j:otherwise>
          </j:choose>
        </a> <st:nbsp/>

      </div>
    </div>
  </j:if>
</j:jelly>